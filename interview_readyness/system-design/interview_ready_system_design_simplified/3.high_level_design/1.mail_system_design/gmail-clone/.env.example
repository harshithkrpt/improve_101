# ===============================
# Global / Shared Environment Vars
# ===============================

# Used by Nginx as Gateway Service (if envsubst templating is needed)
GATEWAY_PORT=80

# ================================
# Auth Service (services/auth-service)
# ================================

# Port the service listens on (Node.js)
PORT=3000
SPRING_PROFILES_ACTIVE=dev
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost

# JWT Secret for signing tokens
JWT_SECRET=super_secret
JWT_EXPIRATION_MS=3600000

# Two-factor auth expiry (in minutes)
OTP_EXPIRY_MINUTES=10

# SMTP configuration for sending emails (OTP, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_gmail_email@gmail.com
SMTP_PASS=your_gmail_app_password

# Redis config (cache, session store, 2FA state)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MySQL Database config
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=auth_db
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password

# ================================
# Message Queue (RabbitMQ/Kafka)
# ================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ================================
# Elasticsearch (Search Service)
# ================================
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=changeme

# ================================
# MinIO / File Storage (Attachment Service)
# ================================
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=email-attachments

# ================================
# Virus Checker (ClamAV etc)
# ================================
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# ================================
# Profile Service
# ================================
PROFILE_DB_HOST=mysql
PROFILE_DB_PORT=3306
PROFILE_DB_DATABASE=profile_db
PROFILE_DB_USER=root
PROFILE_DB_PASSWORD=your_mysql_password

# ================================
# Spam Detector Service
# ================================
SPAM_DETECTOR_QUEUE=spam-detection

# ================================
# Service Registry / Discovery
# ================================
SERVICE_REGISTRY_HOST=consul
SERVICE_REGISTRY_PORT=8500

# ================================
# Contacts Service
# ================================
CONTACTS_DB_HOST=mysql
CONTACTS_DB_PORT=3306
CONTACTS_DB_DATABASE=contacts_db
CONTACTS_DB_USER=root
CONTACTS_DB_PASSWORD=your_mysql_password

# ================================
# Frontend
# ================================
REACT_APP_API_GATEWAY_URL=http://localhost:80
FRONTEND_PORT=3000

AUTH_SERVICE_PORT=8084
AUTH_SERVICE_DEBUG_PORT=5005